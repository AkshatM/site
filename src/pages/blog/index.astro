---
import Base from '../../layouts/Base.astro';
import Link from '../../components/Link.astro';
import Highlight from '../../components/Highlight.astro';
import PostTitleCard from '../../components/PostTitleCard.astro';
import { Code } from 'astro:components';
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
---

<Base>
    <div class="mx-auto w-80 sm:w-150 md:w-150 lg:w-200 grid grid-cols-1 text-justify gap-6">	
        {
            posts.map((post) => <PostTitleCard href={`/blog/${post.id}`} title="Building a simple blog" />)
        }
    </div>
</Base>