---
import type { PaginationLink } from '@/types'

interface Props {
	nextUrl?: PaginationLink
	prevUrl?: PaginationLink
}

const { nextUrl, prevUrl } = Astro.props
---

{
	(prevUrl || nextUrl) && (
		<nav class='mt-8 flex items-center gap-x-4' aria-label='Pagination'>
			{prevUrl && (
				<a class='me-auto py-2 rounded focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 focus-visible:ring-offset-background' data-astro-prefetch href={prevUrl.url}>
					{prevUrl.srLabel && <span class='sr-only'>{prevUrl.srLabel}</span>}
					{prevUrl.text ? prevUrl.text : 'Previous'}
				</a>
			)}
			{nextUrl && (
				<a class='ms-auto py-2 rounded focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 focus-visible:ring-offset-background' data-astro-prefetch href={nextUrl.url}>
					{nextUrl.srLabel && <span class='sr-only'>{nextUrl.srLabel}</span>}
					{nextUrl.text ? nextUrl.text : 'Next'}
				</a>
			)}
		</nav>
	)
}
