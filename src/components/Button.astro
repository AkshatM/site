---
import { cn } from '@/utils'
const { as: Tag = 'a', class: className, title, href, style = 'button', extra } = Astro.props
---

<Tag
	class={cn(
		className,
		'inline-flex items-center gap-x-1 rounded-lg bg-primary-foreground border border-border px-2 py-1 text-sm transition-all hover:bg-input focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 focus-visible:ring-offset-background',
		!href && 'cursor-default',
		style === 'pill' && 'rounded-xl',
		extra,
	)}
	href={href}
	data-astro-prefetch
>
	<slot name='icon-before' />
	<p>{title}</p>
	<slot name='icon-after' />
</Tag>
