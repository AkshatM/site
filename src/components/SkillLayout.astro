---
import Button from './Button.astro'

interface Skill {
	title: string,
	bgColor?: string,
	textColor?: string,
}

const { title, skills } = Astro.props

const toStyle = (bgColor?: string, textColor?: string) => {
	return (bgColor && textColor) ? `font-bold ${bgColor} ${textColor}` : `font-bold`;
}
---

<div class='flex flex-col gap-y-2 md:flex-row md:gap-x-5 md:gap-y-0'>
	<h3 class='w-1/5 font-medium'>{title}</h3>
	<div class='flex w-4/5 flex-row flex-wrap gap-x-4 gap-y-2'>
		{skills.map((skill: Skill) => <Button as='button' title={skill.title} style='pill' extra={toStyle(skill.bgColor, skill.textColor)} />)}
	</div>
</div>
